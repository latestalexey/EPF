// Создает документы отгрузки после обработки файла заказов
Процедура СоздатьДокументыПродаж(ДляЗаполнения)
	
	ТаблицаЗаголовков = ДляЗаполнения.табЗаголовкиДокументов;
	ТаблицаТоваров = ДляЗаполнения.табСтрокиДокументов;	
	
	СписокСозданныхЗаявок = Новый СписокЗначений;
	СвойствоЗаказа = ПолучитьЗначенияКлюча("СВОЙСТВОЗАКАЗА");
	
	Для Каждого СтрокаЗаголовка Из ТаблицаЗаголовков цикл
		
		Если НЕ СтрокаЗаголовка.ЭтоВозврат тогда
			НовДокумент = Документы.ОтгрузкаТоваровУслуг.СоздатьДокумент();
		Иначе
			НовДокумент = Документы.ВозвратТоваровОтПокупателя.СоздатьДокумент();
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(НовДокумент, СтрокаЗаголовка);
		НовДокумент.Дата = ТекущаяДата();
		// Чтобы корректно отработало заполнение шапки, надо подставить максимальный срок кредитования
		Если НЕ СтрокаЗаголовка.ЭтоВозврат тогда
			НовДокумент.СрокКредитования = ПолучитьМаксимальныйСрокКредитования();
		КонецЕсли;	
		
		РаботаСДокументами.ЗаполнитьШапкуДокумента(НовДокумент, НовДокумент.Ответственный, "Продажа");
		
		Если НовДокумент.ДоговорКонтрагента.Пустая() Тогда
			НовДокумент.ДоговорКонтрагента = СтрокаЗаголовка.ДоговорКонтрагента;
		КонецЕсли; 
		
		ПроверитьУстановитьКоммерческиеУсловия(НовДокумент);
		
		НовДокумент.ПроверитьУстановитьДатуОплаты();						
		НовДокумент.Склад = Справочники.Склады.ПустаяСсылка();
		
		УстановитьВидПоставки(НовДокумент);
		
		НайденныеТоварыЗаказа = ТаблицаТоваров.НайтиСтроки(Новый Структура("ВнешнийНомер", СтрокаЗаголовка.ВнешнийНомер));
		
		Для Каждого ТоварЗаказа Из НайденныеТоварыЗаказа цикл
			
			Если НовДокумент.Склад.Пустая() тогда
				НовДокумент.Склад = ТоварЗаказа.Номенклатура.ОсновнойСкладОтгрузки;
			КонецЕсли;	
			
			НовСтр = НовДокумент.Товары.Добавить();
			ЗаполнитьЗначенияСвойств(НовСтр, ТоварЗаказа);
			
			НовСтр.Цена = УправлениеЦенообразованием.ПолучитьЦенуНоменклатуры(
								НовСтр.Номенклатура,
								Справочники.ВариантыНоменклатуры.ПустаяСсылка(),
								НовДокумент.ТипЦен,
								НовДокумент.Дата,
								НовСтр.ЕдиницаИзмерения
								);
								
			ОбработкаТабличныхЧастей.ЗаполнитьСтавкуНДСТабЧасти(НовСтр, НовДокумент);
			ОбработкаТабличныхЧастей.РассчитатьСуммуТабЧасти(НовСтр, НовДокумент);
			ОбработкаТабличныхЧастей.РассчитатьСуммуНДСТабЧасти(НовСтр, НовДокумент);
			
		КонецЦикла;
		
		УстановитьГруппуДоставки(НовДокумент);
		Если ЗначениеЗаполнено(НовДокумент.ГруппаДоставки) тогда
			НовДокумент.ПроверитьУстановитьДатуОтгрузки();
		КонецЕсли;
		
		НовДокумент.УстановитьСсылкуНового(НовДокумент.Ссылка);
		
		НачатьТранзакцию();
		//--
		Попытка	
			НовДокумент.Записать();	
			ПривязатьВнешнийНомерКНакладной(НовДокумент.Ссылка, СвойствоЗаказа, СтрокаЗаголовка.ВнешнийНомер);
			СписокСозданныхЗаявок.Добавить(НовДокумент.Ссылка);
			Сообщить("> Создан документ "+НовДокумент.Ссылка);
		Исключение
			ОтменитьТранзакцию();
			Сообщить("Не удалось создать документ отгрузки для заказа №"+СтрокаЗаголовка.ВнешнийНомер+" по причине: "+ОписаниеОшибки());
			Продолжить;
		КонецПопытки;
		//--
		ЗафиксироватьТранзакцию();
		
	КонецЦикла;	
	
КонецПроцедуры	

Процедура ЗагрузитьЗаказы()
			
	КаталогЭкспорта = ПолучитьЗначенияКлюча("КАТАЛОГЗАГРУЗКИ");
	Режим = ПолучитьЗначенияКлюча("РАСШИРЕНИЕ_ФАЙЛОВ_ОБМЕНА");
		
	Файл = Новый Файл(КаталогЭкспорта);
	Если НЕ Файл.Существует() тогда
		Сообщить("Каталог экспорта не найден!", СтатусСообщения.ОченьВажное);
		Возврат;
	КонецЕсли;	
	
	Если Режим = "XML" тогда
		
		ИмяФайлаИсточника = КаталогЭкспорта+ "\OutletOrders.xml";
		ИмяФайлаПриемника = ПолучитьИмяВременногоФайла("xml");
		
	ИначеЕсли Режим = "ZIP" Тогда 
		
		ИмяФайлаИсточника = ПолучитьИмяФайлаZIP(КаталогЭкспорта);
		
		Если ИмяФайлаИсточника = Неопределено тогда
			Сообщить("Каталог экспорта пуст!");
			Возврат;
		КонецЕсли;	
		
		ИмяФайлаПриемника = ПолучитьИмяВременногоФайла("zip");
		
	КонецЕсли;
	
	Попытка
		КопироватьФайл(ИмяФайлаИсточника, ИмяФайлаПриемника);
		УдалитьФайлы(ИмяФайлаИсточника);
	Исключение
		Сообщить("Не удалось получить файл заказов "+ИмяФайлаИсточника);
		Возврат;
	КонецПопытки;
	
	Если Режим = "ZIP" Тогда
		// Извлечем файл с заказами из архива
		ЧтениеАрхива = Новый ЧтениеZipФайла(ИмяФайлаПриемника);
		ИмяФайлаАрхива = ИмяФайлаПриемника;
		
		ЭлементАрхива = ЧтениеАрхива.Элементы.Найти("OutletOrders.xml");
		
		ЧтениеАрхива.Извлечь(ЭлементАрхива, КаталогВременныхФайлов());
		// Создадим имя врем. файла для заказов
		ИмяФайлаПриемника = КаталогВременныхФайлов()+"OutletOrders.xml";
		// Удалим архив с файлами
		УдалитьФайлы(ИмяФайлаАрхива);
		
	КонецЕсли; 
		
	ТаблицыДляДвижений = Новый Структура("табЗаголовкиДокументов, табСтрокиДокументов", СоздатьТаблицуЗаголовков("Продажи"), СоздатьТаблицуСтрокДокументов("Продажи"));
	
	Попытка
		Сообщить(">> "+ТекущаяДата()+" / Начало обработки файла заказов");
		ПрочитатьФайлЗаказов(ИмяФайлаПриемника, ТаблицыДляДвижений);
		Сообщить(">> "+ТекущаяДата()+" / Окончание обработки файла заказов" + Символы.ПС);
	Исключение
		Сообщить(ОписаниеОшибки());
		Возврат;
	КонецПопытки;
	
	Сообщить(">> "+ТекущаяДата()+" / Начало создания документов продаж");
	СоздатьДокументыПродаж(ТаблицыДляДвижений);
	Сообщить(">> "+ТекущаяДата()+" / Окончание создания документов продаж" + Символы.ПС);
	
	УдалитьФайлы(ИмяФайлаПриемника);
		
КонецПроцедуры	

