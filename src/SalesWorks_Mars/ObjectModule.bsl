Функция ПолучитьИмяФайлаZIP(пКаталог)
	
	МассивФайлов = НайтиФайлы(пКаталог, "*.zip");
	
	Если МассивФайлов.Количество() = 0 тогда
		Возврат Неопределено;
	КонецЕсли;	
	
	ТабЗнач = Новый ТаблицаЗначений;
	ТабЗнач.Колонки.Добавить("ИмяФайла");
	ТабЗнач.Колонки.Добавить("ДатаИзменения");
	
	Для каждого пФайл Из МассивФайлов Цикл
		
		НовСтр = ТабЗнач.Добавить();
		НовСтр.ИмяФайла = пФайл.ПолноеИмя;
		НовСтр.ДатаИзменения = пФайл.ПолучитьВремяИзменения();
		
	КонецЦикла; 
	
	ТабЗнач.Сортировать("ДатаИзменения УБЫВ");
	
	// Удалим оставшиеся файлы в каталоге
	Пока ТабЗнач.Количество() > 1 Цикл
		ТекСтр = ТабЗнач.Получить(1);
		УдалитьФайлы(ТекСтр.ИмяФайла);
		ТабЗнач.Удалить(ТекСтр);	
	КонецЦикла; 
	
	СтрокаТабЧасти = ТабЗнач.Получить(0);
	
	Возврат СтрокаТабЧасти.ИмяФайла;
	
КонецФункции	

